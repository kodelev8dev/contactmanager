@* @model TModel *@

@* @{ *@
@*     Layout = null; *@
@* } *@

<!DOCTYPE html>

<html>
<head>
    <title>Contacts</title>
</head>
<body>
    <div class="text-center">
        <div class="row mb-5">
            <div class="col">
                <a class="btn btn-primary btn-sm" asp-controller="Contacts" asp-action="Create" target="popup">New Contact</a>
            </div>
        </div>
        <div class="col"></div>

        <table class="table table-hover">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Name</th>
                    <th scope="col">Email</th>
                    <th scope="col">Phone</th>
                    <th scope="col">Address</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var contact in Model)
                {
                    <tr class="jsTableRow" id="@contact.Id">
                        <th scope="row">@contact.Id</th>
                        <td>@contact.Name</td>
                        <td>@contact.Email</td>
                        <td>@contact.Phone</td>
                        <td>@contact.Address</td>
                        <td align="right">
                            <a class="btn btn-primary btn-sm" asp-controller="Contacts" asp-action="Edit" asp-route-id="@contact.Id" id="edit_@{
                            @contact.Id
}">Edit</a> |
                        </td>
                        <td align="left">
                            <a class="btn btn-danger btn-sm"
                               asp-controller="Contacts"
                               asp-action="Delete"
                               asp-route-id="@contact.Id"
                               onclick="return confirm('Are you sure you want to delete this contact?')">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
